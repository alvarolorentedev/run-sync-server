{
  "name": "run-sync-server",
  "version": "0.0.1",
  "description": "Server side for the run-sync project",
  "main": "src/server.js",
  "scripts": {
    "start": " node .",
    "start:dev": "NODE_ENV=development nodemon .",
    "start:prod": "node src/cluster.js",
    "test": "jest",
    "test:dev": "jest --watchAll",
    "test:cov": "jest --coverage"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:aperezm85/run-sync-server.git"
  },
  "author": "Alex Perez <alex@run-sync.com>",
  "contributors": [
    {
      "name": "Alvaro Perez",
      "email": "alvaro@run-sync.com"
    }
  ],
  "license": "ISC",
  "jest": {
    "testMatch": [
      "**/test/**/*-test.js"
    ],
    "coverageDirectory": "shippable/codecoverage",
    "coverageReporters": [
      "text",
      "cobertura"
    ],
    "testEnvironment": "node",
    "automock": false
  },
  "dependencies": {
    "body-parser": "^1.17.1",
    "cluster": "^0.7.7",
    "cors": "^2.8.4",
    "endomondo-unofficial-api": "^0.0.9",
    "express": "^4.15.2",
    "express-exception-handler": "^0.0.2",
    "helmet": "^3.5.0",
    "morgan": "^1.8.2",
    "nike-unofficial-api": "github:kanekotic/nike-unofficial-api"
  },
  "devDependencies": {
    "jest": "^20.0.4",
    "nodemon": "^1.11.0",
    "supertest": "^3.0.0"
  }
}
